<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1><strong>Save any kind of movies</strong></h1>
    <p>Classic</p>
  </div>
</div>

<div class="container">
  <div class="row d-flex justify-content-between mb-4">
    <div class="col-3">
      <h1>My List</h1>
    </div>
    <div class="col-3">
      <%= link_to "Add new list", new_list_path, class: "btn btn-success" %>
    </div>
  </div>
  <div class="row">
    <ul>
          <% @lists.each do |list| %>
          <li>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_tag list.photo.key if list.photo.key? %>')>
              <%= link_to list.name, list_path(list) %>
            </div>
          </li>
          <% end %>
      </div>
    </ul>
  </div>
</div>
